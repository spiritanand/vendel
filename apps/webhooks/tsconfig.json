{
	"extends": "@repo/typescript-config/base.json",
	"include": [
		"**/*.ts"
	],
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": ".",
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"esModuleInterop": true,
		"sourceMap": true
	},
	"exclude": [
		"node_modules"
	]
}
